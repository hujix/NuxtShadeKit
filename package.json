{
  "name": "nuxt-shade-kit",
  "version": "0.1.0",
  "description": "基于 Nuxt 4 + Tailwind CSS v4 + shadcn-vue 的现代全栈模板项目，集成 OAuth 认证、接口安全防护、统一 UI 体系",
  "type": "module",
  "private": true,
  "keywords": [
    "nuxt",
    "nuxt4",
    "vue3",
    "tailwindcss",
    "shadcn-vue",
    "typescript",
    "oauth",
    "authentication",
    "nuxt-auth-utils",
    "nuxt-security",
    "template",
    "starter",
    "boilerplate",
    "fullstack"
  ],
  "author": "Hu.Sir",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/hujix/NuxtShadeKit"
  },
  "scripts": {
    "build": "nuxt build",
    "dev": "nuxt dev",
    "generate": "nuxt generate",
    "preview": "nuxt preview",
    "postinstall": "nuxt prepare",
    "lint": "eslint . --fix && prettier --write --list-different .",
    "prepare": "husky",
    "precommit": "lint-staged",
    "deploy": "npm run build && npx wrangler pages deploy dist --project-name=nuxt-shade-kit"
  },
  "dependencies": {
    "@tailwindcss/vite": "^4.1.17",
    "@vueuse/core": "^14.1.0",
    "class-variance-authority": "^0.7.1",
    "clsx": "^2.1.1",
    "lucide-vue-next": "^0.560.0",
    "nuxt": "^4.2.2",
    "nuxt-auth-utils": "0.5.26",
    "nuxt-security": "^2.5.0",
    "reka-ui": "^2.6.1",
    "shadcn-nuxt": "2.4.3",
    "tailwind-merge": "^3.4.0",
    "tailwindcss": "^4.1.17",
    "tw-animate-css": "^1.4.0",
    "vue": "^3.5.25",
    "vue-router": "^4.6.3",
    "vue-sonner": "^2.0.9"
  },
  "devDependencies": {
    "@nuxt/eslint": "^1.12.1",
    "@types/node": "^25.0.0",
    "eslint": "^9.39.1",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "husky": "^9.1.7",
    "lint-staged": "^16.2.7",
    "prettier": "^3.7.4",
    "prettier-plugin-tailwindcss": "^0.7.2",
    "typescript": "^5.9.3"
  },
  "lint-staged": {
    "*.{js,vue,ts}": [
      "eslint --fix .",
      "prettier --write ."
    ]
  },
  "packageManager": "pnpm@10.25.0"
}
